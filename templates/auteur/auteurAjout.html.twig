{% extends 'base.html.twig' %}

{% block title %}Ajouter un auteur{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
<div class="container">
    <h1>{% trans %}Transversal.Auteur{% endtrans %}</h1>

    {{ form_start(form) }}
        
        <div class="form-group">
            <h5>{% trans %}Transversal.Nom{% endtrans %}</h5>
            {{ form_widget(form.Nom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <h5>{% trans %}Transversal.prenom{% endtrans %}</h5>
            {{ form_widget(form.Prenom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.Valider, {'attr': {'class': 'btn'}}) }}
        </div>
        
        {{ form_end(form) }}


</div>

{% endblock %}