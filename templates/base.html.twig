<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="{{ asset('styles/app.css') }}" rel="stylesheet" />
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="header">
            <nav class="navbar bg-body-tertiary">
                <div class="container-fluid" style="display:flex; align-item:center; justify-content:flex-start;">
                    <img src="{{asset('img/logoWow.png')}}" alt="Logo" width="50" height="44" class="d-inline-block align-text-top">
                    <p style="margin:0" class="navbar-brand">{% trans %}Header.titre{% endtrans %}</p>
                </div>
            </nav>
            <div class="nav">
                <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="http://localhost:8000/{{_locale}}">{% trans %}Transversal.Accueil{% endtrans %}</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/{{_locale}}/employe">{% trans %}Transversal.Employes{% endtrans %}</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            {% trans %}Transversal.Marques_Pages{% endtrans %}
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="http://localhost:8000/{{_locale}}/marque">{% trans %}Transversal.Marques_Pages{% endtrans %}</a></li>
                                <li><a class="dropdown-item" href="http://localhost:8000/{{_locale}}/marque/motcle">{% trans %}Transversal.Mots_Cles{% endtrans %}</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            {% trans %}Header.biblio{% endtrans %}
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="http://localhost:8000/{{_locale}}/livre">{% trans %}Transversal.Livres{% endtrans %}</a></li>
                                <li><a class="dropdown-item" href="http://localhost:8000/{{_locale}}/auteur">{% trans %}Transversal.Auteurs{% endtrans %}</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            Cailloux
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="http://localhost:8000/{{_locale}}/cailloux/faune">{% trans %}Accueil.Faune.faune{% endtrans %}</a></li>
                                <li><a class="dropdown-item" href="http://localhost:8000/{{_locale}}/cailloux/flore">{% trans %}Accueil.Flore.flore{% endtrans %}</a></li>
                            </ul>
                        </li>                   
                    </ul>
                    </div>
                </div>
            </nav>
            </div>
        </div>
        <div class="block-body">
        {% block body %}{% endblock %}
        </div>
        <div class="card-footer fixed-bottom">
            <p class="card-text">Loubriat Flavien</p>
            <a href="https://loubriatnc.nc" class="btn btn-primary">{% trans %}Footer.portfolio{% endtrans %}</a>
            <p class="card-text">{% trans %}Transversal.Annee_parution{% endtrans %} : 2024</p>
        </div>
    </body>
</html>
