{# templates/cailloux/flore.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste de la Flore{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste de la  Flore</h1>

        {% if flore is not empty %}
            <table class="table-custom">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Commentaire</th>
                    </tr>
                </thead>
                <tbody>
                    {% for f in flore %}
                        <tr>
                            <td>{{ f.id }}</td>
                            <td><img src={{ f.image }} width=20% height=20%></img></td>
                            <td>{{ f.commentaire }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucune flore trouv√©.</p>
        {% endif %}
    </div>
{% endblock %} 