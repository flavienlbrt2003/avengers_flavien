{% extends 'base.html.twig' %}

{% block title %}Hello I18NController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    body {
        text-align: center;
    }
</style>

<h1>{% trans %}texte.traduire{% endtrans %}</h1>

<p>{{trad}}</h1>

<p>{% trans with {"%prenom%": "Toi"} %}dit.bonjour{% endtrans %}</p>

<p>{% trans with {"%nb%": "0"} %}nb_livres{% endtrans %}</p>
<p>{% trans with {"%nb%": "1"} %}nb_livres{% endtrans %}</p>
<p>{% trans with {"%nb%": "2"} %}nb_livres{% endtrans %}</p>

<p>{% trans with {"%prenom%": "Marie et Jeanne", "%genre%": ""} %}amis{% endtrans %}</p>
{% endblock %}
