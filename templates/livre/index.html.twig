{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des Livres</h1>

        <a class="btn-ajouter" href="http://localhost:8000/livre/ajout">Ajouter un livre</a><br><br>

        {% if livres is not empty %}
            <table class="table-custom">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date de parution</th>
                        <th>Nb Page</th>
                        <th>Détails</th>
                        <th>Modifier</th>
                    </tr>
                </thead>
                <tbody>
                    {% for l in livres %}
                        <tr>
                            <td>{{ l.titre }}</td>
                            {% if l.getAuteur() is not empty %}
                                <td>{{ l.getAuteur().nom }} {{l.getAuteur().prenom}}</td>
                            {% else %}
                                <td>Auteur inconnu</td>
                            {% endif %}
                            <td>{{ l.dateParution | date("d/m/Y") }}</td>
                            <td>{{ l.nbPages }}</td>
                            <td><a href="http://localhost:8000/livre/detail/{{l.id}}">Détails</a></td>
                            <td><a href="http://localhost:8000/livre/modif/{{l.id}}">Modifier</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <br>
            <p>Nombre de livres enregistrés : {{ nbLivre[0][1] }}</p>
        {% else %}
            <p>Aucun livre trouvé.</p>
        {% endif %}
    </div>
{% endblock %}