{% extends 'base.html.twig' %}

{% block title %}Ajouter un livre{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
<div class="container">
    <h1>{% trans %}Transversal.Livre{% endtrans %}</h1>

    {{ form_start(form) }}
        
        <div class="form-group">
            <h5>{% trans %}Livre.titre{% endtrans %}</h5>
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <h5>{% trans %}Livre.date_parution{% endtrans %}</h5>
            {{ form_widget(form.dateParution, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <h5>NbPages</h5>
            {{ form_widget(form.nbPages, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <h5>{% trans %}Transversal.Auteur{% endtrans %}</h5>
            {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.Valider, {'attr': {'class': 'btn'}}) }}
        </div>
        
        {{ form_end(form) }}


</div>

{% endblock %}