{% extends 'base.html.twig' %}

{% block title %}Ajouter un mot clé{% endblock %}

{% block stylesheets %}
    <style>
        .form-group {
            margin-bottom: 20px;
        }

        h5{
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mot Clé</h1>

        {{ form(form) }}
        

    </div>
{% endblock %}
